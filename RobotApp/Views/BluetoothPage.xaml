<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotApp.Views.BluetoothPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="stateLabel" ></Label>
            <Button Text="Skanuj" Clicked="Button_Clicked"></Button>
            <ListView ItemsSource="{Binding deviceList}"></ListView>
            <Button IsEnabled="False" Text="Połącz"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>