<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotApp.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Czcionka"/>
            <Button Text="Kolor tła mapy"/>
            <Button Text="Kolor ścian na mapie"/>
            <Button Text="Kolor robota na mapie"/>
            <Picker Title="Wybierz język">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Polski</x:String>
                        <x:String>Angielski</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <StackLayout Orientation="Horizontal">
                <Label>Dźwięk</Label>
                <Switch IsToggled="True"></Switch>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>